{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$anchor": "courseasset",
  "description": "A course asset",
  "type": "object",
  "properties": {
    "_courseId": {
      "description": "Course record unique ID",
      "type": "string",
      "isObjectId": true
    },
    "_contentId": {
      "description": "The ID for the content record that uses this asset",
      "type": "string",
      "isObjectId": true
    },
    "_assetId": {
      "description": "Asset record unique ID",
      "type": "string",
      "isObjectId": true
    },
    "assetCount": {
      "description": "Number of time the asset has ben used in this course",
      "type": "number",
      "default": 1
    }
  },
  "required": ["_courseId", "_contentId", "_assetId"]
}
